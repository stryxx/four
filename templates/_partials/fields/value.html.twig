{% extends '@bolt/_partials/fields/_base.html.twig' %}

{# check disabled #}
{% if disabled is not defined %}
    {% set disabled = false %}
{% endif %}

{% block field %}
    <editor-text
        :id='{{ id|json_encode }}'
        :value="{{ value|json_encode }}"
        :name='{{ name|json_encode }}'
        :type='{{ class|json_encode }}'
        :disabled='{{ disabled|json_encode }}'
    ></editor-text>
    <span>{{ value|json_encode }}</span>
{% endblock %}
