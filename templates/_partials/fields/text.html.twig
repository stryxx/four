{% extends '@bolt/_partials/fields/_base.html.twig' %}

{# check disabled #}
{% if disabled is not defined %}
    {% set disabled = false %}
{% endif %}

{# check if we only want the value: valueonly #}
{% if valueonly is not defined %}
    {% set valueonly = false %}
{% endif %}

{% block field %}
    {% if not valueonly %}
        <editor-text
            :id='{{ id|json_encode }}'
            :value="{{ value|json_encode }}"
            :name='{{ name|json_encode }}'
            :type='{{ class|json_encode }}'
            :disabled='{{ disabled|json_encode }}'
        ></editor-text>
    {% else %}
        <span
            :id='{{ id|json_encode }}'
            :name='{{ name|json_encode }}'
            class=""
        >{{ value|json_encode }}</span>
    {% endif %}
{% endblock %}
